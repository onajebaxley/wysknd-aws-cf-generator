{
    "extends": ["eslint:recommended"],
    "plugins": [],
    "parserOptions": {
        "ecmaVersion": 5,
        "sourceType": "module"
    },
    "rules": {
        "semi": 2,
        "indent": ["error", 4],
        "no-trailing-spaces": "error",
        "no-unused-vars": [ "error", { "args": "none" } ]
    },
    "env": {
        "node": true,
        "mocha": true
    }
}
